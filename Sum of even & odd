import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
      Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int s1 = 0;
        int s2 = 0;
        while(n>0){
           int a = n%10;
            if(a%2 == 0){
                s1 = s1+a;
            }
            else{
                s2 = s2+a;
            }
            n = n/10;
        }
        System.out.print(s1 + " "+s2);

	}
    
    
}
